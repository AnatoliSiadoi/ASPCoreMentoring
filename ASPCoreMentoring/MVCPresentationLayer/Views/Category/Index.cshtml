@using MVCPresentationLayer.Pagination
@model IEnumerable<MVCPresentationLayer.Models.Category.CategoryViewModel>

@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureLink)
            </th>
            <th>
                Create/Update
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PictureLink))
                    {
                        @*@Html.ActionLink("Look a Picture", "Picture", new { id = item.PictureLink })*@
                        @*<a northwind-id=@item.PictureLink>Look a Picture</a>*@
                        @Html.NorthwindImageLink(item.PictureLink, "Look a Picture");
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit Picture", "Edit", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedLinks((PagingInfo)ViewBag.Paging, x => Url.Action("Index", "Category", new { page = x }))
@section Footer
    {
    <div class="container">
        <p>Unfortunately, you cannot edit categories (only changing the picture is possible)!</p>
    </div>
}
