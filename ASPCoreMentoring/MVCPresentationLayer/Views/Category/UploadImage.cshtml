@model MVCPresentationLayer.Models.Category.CategoryPictureViewModel

    <form asp-action="Picture" enctype="multipart/form-data" method="post">
        @Html.HiddenFor(m => m.Id)
        <span asp-validation-for="Picture" class="text-danger"></span>
        <input asp-for="Picture" type="file" accept=".bmp">
        <button type="submit" class="btn btn-primary">Upload image</button>
    </form>
